{% extends 'base.html.twig' %}

{% block content %}

    <h1>home</h1>
    <div class="row">
        {% for cs in coffeeshop_list %}
            <div class="col-lg-6">
                <div class="card mb-4 shadow-sm {% if cs['pc'] %} bg-success text-light {% endif %}">
                    <img src="img/default.jpg" class="card-img-top" width="100%" height="225">
                    <div class="card-body">
                        <h2>{{ cs['sc'].name }}</h2>
                        <p class="card-text">{{ cs['sc'].summary }}</p>
                        <div class="d-flex justify-content-center align-items-center">
                            <div class="btn-group">
                                <a href="/?page=home" class="btn btn-sm btn-primary">View</a>
                                {% if cs['pc'].user_id == user_id %}
                                <button type="button" class="btn btn-sm btn-primary">Edit</button>
                                {% endif %}
                            </div>
{#                            <small class="text-muted"></small>#}
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}