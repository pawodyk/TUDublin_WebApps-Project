{% extends 'base.html.twig' %}

{% block content %}
    <div class="row">
        {% if session.user_role == 'ROLE_STAFF' or session.user_role == 'ROLE_SHOP' %}
            <div class="col-12 text-center">
                <h2>Menu Controls</h2>
                <hr class="my-3">
            </div>
            <div class="col-12">
                <div class="row">
                    <div class="col">
                        <div class="alert alert-warning text-center">
                            <h5>Work in progress!</h5>
                            <p>This Feature is not yet completed, if you wish to edit your menu please contact CSR Staff and they will be happy to help.</p>
                        </div>
                    </div>
                </div>

                <div class="row">
                    {% for cs in coffeeshops%}
                        <div class="col-12 col-md-6 col-xl-4">
                            <h4>Coffeeshop: {{ cs.getName() }}</h4>
                            <h5>{% if cs.getMenuId() %}Menu ID {{ cs.getMenuId() }} {% else %} No Menu selected {% endif %}</h5>
                            <ol>
                                {% for mi in cs.menuList() %}
                                    <li>{{ mi.getItemName() }} : &euro;{{ mi.getItemPrice() }}</li>
                                {% endfor %}
                            </ol>
                        </div>
                    {% endfor %}
                </div>


{#                <a href="/?page=menu_control" class="btn btn-primary">edit menu#}
{#                    items</a>#}
            </div>
        {% else %}
            <p>You cannot view this page</p>
        {% endif %}

    </div>


{% endblock %}