{% extends 'base.html.twig' %}

{% block content %}
    {% if session.user_role == "ROLE_ADMIN" %}
        <form method="POST" action="/?page=admin&action=submit_password">
            <input type="hidden" id="userid" name="userid" value="{{ user.getId() }}">
            <label for="userpassword">Enter new password</label>
            <input type="password" maxlength="100" id="userpassword" name="userpassword">

            <button type="submit" class="btn btn-success">Change password</button>
        </form>
        <p><a href="/?page=admin">return to admin page</a></p>
    {% else %}
        <p>Admins only</p>
    {% endif %}
{% endblock %}